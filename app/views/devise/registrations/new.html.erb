<div class="to_table" style="display:table; width:100%; height:100%;">
  <div class="middle" style="display:table-cell; vertical-align:middle;">
  <div class="offset-4 col-4">
    <h2>회원가입</h2>
          <br>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
          
            <div class="form-group">
              <%= f.label :가입메일 %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email"%>
            </div>
             
            <div class="form-group">
              <%= f.label :이름 %>
              <%= f. text_field :user_name, autofocus: true, class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= f.label :학과 %>
              <%= f. text_field :major, autofocus: true, class: "form-control" %>
            </div>
           
            <div class="form-group">
              <%= f.label :학번 %>
              <%= f. text_field :student_number, autofocus: true, class: "form-control" %>
            </div>
            
            <div class="form-group">
              (<%= @minimum_password_length %>글자 이상!) <%= f.label :비밀번호 %>
              <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
                            
            <div class="form-group">
              <%= f.label :비밀번호_확인 %>
              <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
            </div>
                        
          
            <button type="submit" class="btn btn-primary">회원 가입</button>
          <% end %>
          
          <%= render "devise/shared/links" %>
          </div>
    </div>
</div>